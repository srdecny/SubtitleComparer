<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" >
    <Grid RenderTransformOrigin="0.529,0.489">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,0,0,-0.333">
            <ListView x:Name="SubtitlePairBox" HorizontalContentAlignment="Stretch" Margin="0,0,-0.333,-0.333" MouseDoubleClick="SubtitlePairBox_MouseDoubleClick">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="IsSelected" Value="{Binding IsSelected}"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="First" Width="Auto" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding FirstContent}"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="First" Width="Auto" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Start}"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="First" Width="Auto" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding SecondContent}"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
        <Grid Grid.ColumnSpan="2" Margin="485,0,0.333,-0.333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="13*"/>
            </Grid.ColumnDefinitions>
            <CheckBox x:Name="ToggleDiffCheckBox" Content="CheckBox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,16,83.001,0" Checked="ToggleDiffCheckBox_Checked" Unchecked="ToggleDiffCheckBox_Unchecked" Grid.ColumnSpan="2"/>
            <TextBlock x:Name="VideoDurationTextBox" Margin="0,0,64,211" TextWrapping="Wrap" Text="{Binding Position, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" VerticalAlignment="Bottom" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="191"/>
            <Button Content="Button" HorizontalAlignment="Right" VerticalAlignment="Top" Width="77" Margin="0,10,35.333,0" Click="Button_Click" Height="25"/>
            <ffme:MediaElement x:Name="VideoElement" LoadedBehavior="Play" UnloadedBehavior="Manual" Margin="0,-19,28,176" MediaFailed="VideoElement_MediaFailed" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="227" Height="264" VerticalAlignment="Bottom" PositionChanged="VideoElement_PositionChanged" />
        </Grid>
    </Grid>
</Window>
