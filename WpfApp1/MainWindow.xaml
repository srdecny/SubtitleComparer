<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid RenderTransformOrigin="0.529,0.489">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid>
            <ListView x:Name="SubtitlePairBox" HorizontalContentAlignment="Stretch" Margin="0,0,-163,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="First" Width="Auto" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding FirstContent}"></TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Diff" Width="Auto"  DisplayMemberBinding="{Binding Diff}"></GridViewColumn>
                        <GridViewColumn Header="Second" Width="Auto" DisplayMemberBinding="{Binding SecondContent}"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

        </Grid>
        <CheckBox x:Name="ToggleDiffCheckBox" Content="CheckBox" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="187,10,0,0" Checked="ToggleDiffCheckBox_Checked"/>
    </Grid>
</Window>
